<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.closet.great.dao.ClothesDao">

	<select id="getClothesList" resultType="clothes" parameterType="HashMap" >
		SELECT * FROM clothes where cl_cnum = #{cl_cnum} and cl_style = #{cl_style}
	</select>
	
	<insert id="clothesInsert" parameterType="clothes">
		INSERT INTO CLOTHES VALUES(CLOTHES_SEQ.NEXTVAL, #{cl_name}, #{cl_style}, #{cl_cnum})
	
	</insert>
	
	<delete id="clothesDelete" parameterType="String">
		DELETE FROM clothes WHERE cl_NUM = #{string}
	</delete>
	
		<update id="clothesUpdate" parameterType="clothes">
		UPDATE clothes SET cl_name = #{cl_name}, cl_style = #{cl_style} WHERE cl_num = #{cl_num}
	</update>
	
	
	
	
</mapper>