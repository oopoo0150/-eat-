<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.closet.great.dao.ClosetDao">
	<select id="getClosetList" resultType="closet" parameterType="String" >
		SELECT * FROM closet where c_sid = #{cid}
	</select>

	<insert id="closetInsert" parameterType="closet">
		INSERT INTO CLOSET VALUES(CLOSET_SEQ.NEXTVAL, #{c_name}, #{c_open}, #{c_sid})
	
	</insert>
	
		<delete id="closetDelete" parameterType="String">
		DELETE FROM closet WHERE c_NUM = #{string}
	</delete>
	
	<update id="closetUpdate" parameterType="closet">
		UPDATE closet SET c_name = #{c_name}, c_open = #{c_open} WHERE c_num = #{c_num}
	</update>

</mapper>

